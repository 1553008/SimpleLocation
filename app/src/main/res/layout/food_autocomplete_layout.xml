<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/food_autocomplete_image"
            android:layout_width="@dimen/foodAutoCompletePhoto"
            android:layout_height="@dimen/foodAutoCompletePhoto" />
        <TextView
            android:id="@+id/food_autocomplete_text"
            android:layout_width="@dimen/foodAutoCompleteTextWidth"
            android:layout_height="@dimen/foodAutoCompletePhoto"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>