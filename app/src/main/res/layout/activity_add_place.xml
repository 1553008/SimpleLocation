<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoangdung.simplelocation.Activity.AddPlaceActivity">
 <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".Activity.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="vertical"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_btn_add"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="#0AAC9D"
            android:src="@drawable/ic_add"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_btn_search"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="#0AAC9D"
            android:src="@drawable/places_ic_search"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:onClick="onClickAddplaceSearchButton"
            />

    </LinearLayout>

 <TextView
     android:id="@+id/textViewAddress"
     android:layout_marginTop="30dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="34 Marion Road, Brooklyn Park, South Australia, Australia"
     android:textSize="20dp"
     android:textColor="#ffffff"
     android:background="#0AAC9D"
     android:paddingTop="4dp"
     android:paddingBottom="4dp"
     android:textAlignment="center"
     />
</FrameLayout>
