<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary<!--@android:color/transparent--></item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrow</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:actionMenuTextColor">@color/md_black_1000</item>
    </style>
    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>

    </style>
    <style name="Toolbar.Transparent" parent="MaterialDrawerTheme.ActionBar.TranslucentStatus">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="AppTheme.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>
    <style name="AppTheme.RatingText">
        <item name="android:layout_width">20dp</item>
        <item name="android:height">20dp</item>
        <item name="android:background">@drawable/rating_text_style</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
